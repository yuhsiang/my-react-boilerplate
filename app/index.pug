doctype html
html
  head
    // The first thing in any HTML file should be the charset
    meta(charset="utf-8")
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel="manifest",href="manifest.json")
    meta(name="mobile-web-app-capable",content="yes")
    title My Boilerplate in index.pug

    if process.env.NODE_ENV == 'production'
      // you can add your production GA or any Tag Here

    style.
      #load { width: 150px; animation: loading 3s linear infinite; } #load #loading-inner { stroke-dashoffset: 0; stroke-dasharray:
      400; stroke-width: 10; stroke-miterlimit: 10; stroke-linecap: round; animation: loading-circle 2s linear infinite; stroke:
      #52BAA8; fill: transparent; } @keyframes loading { 0% { transform: rotate(0); } 100% { transform: rotate(360deg); } } @keyframes
      loading-circle { 0% { stroke-dashoffset: 0; } 100% { stroke-dashoffset: -600; } }
  body
    div(id="app")
      div(style="margin: 0 auto;width: 150px;")
        h3(style="text-align:center;") Loading
        svg(id="load", x="0px", y="0px", viewBox="0 0 80 80")
          circle(id="loading-inner", cx="40", cy="40", r="30")
